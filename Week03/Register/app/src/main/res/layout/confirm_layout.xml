<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
              android:orientation="vertical">


    <!--    header  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your information register"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--    body   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <!--        username   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Username: "
                android:textSize="16dp"
                />

            <TextView

                android:id="@+id/usernameInView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:textSize="16dp"
                android:text="NguyenVanA" />
        </LinearLayout>
        <!--        password   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Password: "
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/passwordInView"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:text="02/10/2023" />
        </LinearLayout>

        <!--        Birthdate   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Birthdate: "
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/birthdateInView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:textSize="16dp"
                android:text="20/10/1989" />
        </LinearLayout>

        <!--        Gender   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Gender: "
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/genderInView"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:textSize="16dp"
                android:text="Male" />
        </LinearLayout>
        <!--        Hobbies  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="16dp"
                android:text="Hobbies: " />

            <TextView
                android:id="@+id/hobbiesInView"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:textSize="16dp"
                android:text="Tennis, Football" />
        </LinearLayout>


    </LinearLayout>

    <!--    button  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/exitBtn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Exit" />
    </LinearLayout>


</LinearLayout>